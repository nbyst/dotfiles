background no
use_xft yes
xftfont Bitstream Vera Sans Mono:size=5
xftalpha 0.8
update_interval 3.0
total_run_times 0
own_window yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 90 5
maximum_width 90
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color gray
default_shade_color black
default_outline_color black
alignment bottom_left
gap_x 5
gap_y 5
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale yes
use_spacer none

TEXT
${alignc 25}${font Arial Black:size=14}${time %H:%M}${font}
${alignc 17}${font Monospace:size=7}${time  %B %d  %A}${font}
${font Bitstream Vera Sans:style=Bold:pixelsize=10}SYSTEM${font} ${hr 1}
${battery BAT1}

CPU${alignr}${cpu cpu1}%
${cpubar 4 cpu1}
Ram ${alignr} ${memperc}% 
${membar 4}
