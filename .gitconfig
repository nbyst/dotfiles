[user]
	name = nobuyasu tomura
[credential]
	helper = cache --timeout=3600
[alias]
	rhh = reset --hard HEAD
	rld = log origin/master..master
	c = checkout
	cb = checkout -b
	b = branch
	bd = branch -d
	bdf = branch -D
	s = status 
	d = diff
	l = log
	rc = rm --cached
	ca = commit -a
	co = commit 
	hp = push -u origin master
	mm = merge master 
	m = merge
	graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all
	camd = commit --amend
[core]
	pager = less -c
[color]
	ui = auto
