[credential]
	helper = cache --timeout=3600
[alias]
	rhh = reset --hard HEAD
	rhh1 = reset --hard HEAD^
	rld = log origin/master..master
	c = checkout
	cb = checkout -b
	b = branch
	bd = branch -d
	bdf = branch -D
	s = status 
	d = diff
	l = log
	rc = rm --cached
	ca = commit -a
	co = commit 
	hp = push -u origin master
	mm = merge master 
	m = merge
	g = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all 
	graph = log --graph 
	amd = commit --amend
[core]
	pager = lv -c
	editor = vim
[color]
	ui = auto
[user]
	name = nobuyasu tomura
	email = nobuyasu.tomura@soliton.co.jp
