#!/bin/sh
# enable color support of ls and also add handy aliases
#alias dir='dir --color=auto'
#alias vdir='vdir --color=auto'
#alias fgrep='fgrep --color=auto'
#alias egrep='egrep --color=auto'

if [ -x /usr/bin/dircolors ]; then
	alias ls='ls --color=auto'
	alias grep='grep --color=auto'
fi

# some more ls aliases
alias ll='ls -l'
alias la='ls -A'
alias lla='ls -lA'
alias lcf='ls -CF'
alias lm='ls | more'

#git alias
alias g="git"
alias gc="git checkout"
alias gcb="git checkout -b"
alias gb="git branch"
alias gbd="git branch -d"
alias gbdf="git branch -D"
alias gbm="git branch -m"
alias ga="git add"
alias gco="git commit"
alias gca="git commit -a"
alias gcam="git commit -am"
alias gl="git log"
alias gg="git g"
alias gs="git status"
alias gd="git diff"
alias gdc="git diff --cached"
alias gs="git status -s"
alias gssh="git status -s|head"
alias gm="git checkout master"
alias gr="git rebase"
alias gri="git rebase -i"
alias gpl="git pull"
alias gpr="git pull --rebase"
alias gps="git push"
alias ghubp="git push -u origin master"
alias gst="git stash "
alias gstl="git stash list | cat"
alias gsts="git stash save"
alias gstp="git stash pop"

#other alias 
alias psg="ps aux | grep "
alias tmux-a="tmux attach"
alias google="w3m 'http://google.co.jp/'"
alias ggl="w3m 'http://google.co.jp/'"
alias w3b="w3m -B"
#prefix をC-gに
alias tpg='tmux set-option -ag prefix C-u'
#prefix をC-bに
alias tpb='tmux set-option -ag prefix C-b'
